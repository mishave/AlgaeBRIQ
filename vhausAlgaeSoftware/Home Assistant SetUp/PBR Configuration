  - platform: time_date
    display_options:
      - 'time'
      - 'date'
      - 'date_time'

  - platform: mqtt
    name: PBR Cycle Time
    state_topic: "pbrCycleTime"
    value_template: >-
        {%- set uptime  = value_json.cycleTime | round -%}
        {%- set sep     = ', ' -%}
        {%- set TIME_MAP = {
            'week': (uptime / 10080) % 10080,
            'day': (uptime / 1440) % 7,
            'hour': (uptime / 60) % 24,
            'minute': (uptime % 60)
        }
        -%}

        {%- for unit, duration in TIME_MAP.items() if duration >= 1 -%}
            {%- if not loop.first -%}
                {{ sep }}
        {%- endif -%}
          
        {{ (duration | string).split('.')[0] }} {{ unit }}

        {%- if duration >= 2 -%}
          s
        {%- endif -%}
         {%- endfor -%}
          {%- if uptime < 1 -%}
        0
        {%- endif -%}

  - platform: mqtt
    name: Cycle Remaining
    state_topic: "pbrCycleLeft"
    value_template: >-
        {%- set uptime  = value_json.cycleLeft | round -%}
        {%- set sep     = ', ' -%}
        {%- set TIME_MAP = {
            'week': (uptime / 10080) % 10080,
            'day': (uptime / 1440) % 7,
            'hour': (uptime / 60) % 24,
            'minute': (uptime % 60)
        }
        -%}

        {%- for unit, duration in TIME_MAP.items() if duration >= 1 -%}
            {%- if not loop.first -%}
                {{ sep }}
        {%- endif -%}
          
        {{ (duration | string).split('.')[0] }} {{ unit }}

        {%- if duration >= 2 -%}
          s
        {%- endif -%}
         {%- endfor -%}
          {%- if uptime < 1 -%}
        0
        {%- endif -%}


